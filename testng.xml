<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite1" verbose="1" parallel="none">
    <test name="all-tests [Chrome]">
        <parameter name="browser" value="chrome"/>
        <packages>
            <package name="com.scenario_projects.lifeline_front_stage.tests"/>
        </packages>
    </test>

    <!--Configure tests for other browser type;-->
    <test name="all-tests [Firefox]">
        <parameter name="browser" value="firefox"/>
        <packages>
            <package name="com.scenario_projects.lifeline_front_stage.tests"/>
        </packages>
    </test>

    <test name="all-tests [Opera]">
        <parameter name="browser" value="opera"/>
        <packages>
            <package name="com.scenario_projects.lifeline_front_stage.tests"/>
        </packages>
    </test>
</suite>
